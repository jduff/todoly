<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% devise_error_messages! %>
  <%= f.input :email, :required=>false, :label_html=>{:class=>"inline", :style=>"display:none;"} %>
  <%= f.input :password, :required=>false, :label_html=>{:class=>"inline", :style=>"display:none;"} %>
  <%= f.input :password_confirmation, :label_html=>{:class=>"inline", :style=>"display:none;"} %>

  <%= f.button :submit, "Sign up", :class=>"awesome" %>
<% end %>

<%= render :partial => "devise/shared/links" %>
